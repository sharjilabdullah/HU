<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_weight="1"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="8dp"
    app:cardPreventCornerOverlap="true"
    >


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:padding="5dp"
        android:background="@color/white"
        >
        <ImageView
            android:id="@+id/department_ricon"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:src="@drawable/diagnosis_icon"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/department_ricon">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <TextView
            android:id="@+id/department_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="monospace"
            android:textSize="20dp"
            android:text="Diagnosis"
            android:textColor="#012E61"
            android:textStyle="bold" />
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#FFFFFF"
            android:padding="2dp">

            <TextView
                android:id="@+id/department_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:padding="5dp"
                android:textSize="10dp"
                android:text="We are expert in the diagnosis and treatment, Set up an appointment!"
                android:textColor="#012388" />
            </androidx.core.widget.NestedScrollView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp">
                <Button
                    android:id="@+id/button_booknow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Book Now!"
                    android:textSize="10dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:elevation="10dp"
                    android:background="@drawable/searchbar"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>